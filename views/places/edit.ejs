<% layout('layouts/app')%>

  <h1 class="text-center">Edit Place</h1>
  <div class="col-6 offset-3 ">
    <form action="/place/<%= place._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
      <div class="mb-2">
        <label for="title" class="form-lable">Title</label>
        <input type="text" name="place[title]" id="title" class="form-control" value="<%= place.title %>" required>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please fil out this
        </div>
      </div>
      <div class="mb-2">
        <label for="location" class="form-lable">Location</label>
        <input type="text" name="place[location]" id="location" class="form-control" value="<%= place.location %>" required>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please fil out this
        </div>
      </div>
      <div class="mb-2">
        <label for="description" class="form-lable">Description</label>
        <textarea type="text" name="place[description]" id="description" class="form-control" required><%= place.description %></textarea>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please fil out this
        </div>
      </div>
      <div class="mb-2">
        <label for="price" class="form-lable">Price</label>
        <input type="text" name="place[price]" id="price" class="form-control" value="<%= place.price %>" required>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please fil out this
        </div>
      </div>
      <div class="mb-2">
        <label for="image" class="form-lable">Image</label>
        <input type="text" name="place[image]" id="image" class="form-control" value="<%= place.image %>" required>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please fil out this
        </div>
      </div>
      <button type="submit" class="btn btn-success">Save</button>
    </form>
  </div>