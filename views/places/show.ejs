<% layout('layouts/app')%>

  <div class="row mb-5">
    <div class="col-6">
      <div class="card">
        <img src="<%= place.image %>" alt="<%= place.title %>" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= place.title %></h5>
          <p class="card-text"><%= place.description %></p>
        </div>
        <ul class="list-group">
          <li class="list-group-item"><%= place.location %></li>
          <li class="list-group-item"><%= place.price %></li>
        </ul>
        <div class="card-body d-flex gap-3">
          <a href="/place/<%= place._id %>/edit" class="btn btn-warning text-white card-link">Edit</a>
          <form action="/place/<%= place._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger text-white">Delete</button>
          </form>
        </div>
        <div class="card-footer">
          <a href="/places" class="btn btn-primary"> &leftarrow; Back</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      <h3>Leave a rebiew</h3>
      <form action="/place/<%= place._id %>/review" method="POST">
        <div class="mb-3">
          <label for="rating">Rating</label>
          <input type="range" name="place[rating]" id="rating" min="1" max="5" class="form-range">
        </div>
        <div class="mb-3">
          <label for="review">Review</label>
          <textarea name="review[body]" id="review" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Simpan</button>
      </form>
    </div>
  </div>
  